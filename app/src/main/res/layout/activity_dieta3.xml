<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dieta3Activity">
    <TextView
        android:text="Energy efficiency index:"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/EERview"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        />
    <TextView
        android:text="Valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EERvalor"
        app:layout_constraintTop_toBottomOf="@+id/EERview"
        app:layout_constraintBottom_toTopOf="@+id/EERview"
        app:layout_constraintStart_toEndOf="@+id/EERview"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textSize="24sp"/>
    <TextView
        android:text="How many meals do you eat a day?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/EERview"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <RadioGroup
        android:layout_width="120dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:id="@+id/rgRefeicao">
        <RadioButton
            android:text="3 meals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbRefeicao3"
            android:layout_weight="1"/>
        <RadioButton
            android:text="4 meals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbRefeicao4"
            android:layout_weight="1"/>
        <RadioButton
            android:text="5 meals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbRefeicao5"
            android:layout_weight="1"/>
        <RadioButton
            android:text="6 meals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbRefeicao6"
            android:layout_weight="1"/>
    </RadioGroup>
    <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCalcular"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:text="40% protein - 20% fat - 40% carbohydrate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView20"
        android:layout_marginTop="4dp"/>
    <TextView
        android:text="Success!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        app:layout_constraintStart_toEndOf="@+id/buttonCalcular"
        android:layout_marginLeft="40dp"
         android:layout_marginStart="40dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frango"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/frango"
        app:layout_constraintBottom_toTopOf="@+id/frango" app:layout_constraintStart_toEndOf="@+id/frango"
        android:layout_marginLeft="28dp" android:layout_marginStart="28dp" android:text="gramas de frango"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pasta"
        app:layout_constraintTop_toBottomOf="@+id/frango" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"/>
    <TextView
        android:text="gramas de pasta de amendoim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        app:layout_constraintBottom_toTopOf="@+id/pasta"
        app:layout_constraintTop_toBottomOf="@+id/pasta" app:layout_constraintStart_toEndOf="@+id/pasta"
        android:layout_marginLeft="28dp" android:layout_marginStart="28dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arroz"
        app:layout_constraintTop_toBottomOf="@+id/pasta" android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView19" android:text="gramas de arroz"
        app:layout_constraintTop_toBottomOf="@+id/arroz"
        app:layout_constraintBottom_toTopOf="@+id/arroz" app:layout_constraintStart_toEndOf="@+id/arroz"
        android:layout_marginLeft="28dp" android:layout_marginStart="28dp"/>
    <TextView
        android:text="Grams of food per meal that are enough to maintain weight:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/rgRefeicao" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="4dp"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>